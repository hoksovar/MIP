#include <stdio.h>
#include <unistd.h>

#define MAX_SIZE 200	

int riesenie = 0;	
int s, d;	

int zhora ( char pole[][MAX_SIZE] ) {	
	int n;
	for( n = 0; n < s ; n++ ) {
		if( pole[0][n] == '.' )
			return n;	
	}
	return -1;
}

int zlava ( char pole[][MAX_SIZE] ) {	
	int n;
	for( n = 0; n < d ; n++ ) {
		if( pole[n][0] == '.' )
			return n;	
	}
	return -1;
}

void vypis ( char pole[][MAX_SIZE] ) {
	int n, m;
	for( n = 0; n < d; n++ ) {	
		for( m = 0; m < s; m++ ) {	
			printf("%c", pole[n][m]);	
		}
		printf("\n");
	} 
}

void hladaj ( char pole[][MAX_SIZE], int x, int y ) {
		
	pole[y][x] = '*'; 
		
	if( x+1 >= s || y+1 >= d ) {	
		riesenie = 1;
		vypis( pole );		
		return;
	}
	
	if ( riesenie == 1 )	
		return;

	if( pole[y+1][x] == '.' )	
		hladaj ( pole, x, y+1 );
	if( y > 0 && pole[y-1][x] == '.' )
		hladaj ( pole, x, y-1 );
	if( pole[y][x+1] == '.' )
		hladaj ( pole, x+1, y );
	if( x > 0 && pole[y][x-1] == '.' )
		hladaj ( pole, x-1, y );
	pole[y][x] = '.';	
	return;
}

void najdi ( char pole[][MAX_SIZE] ){
	int v = zhora( pole );	

	if( v != -1 ) {	
		hladaj( pole, v, 0 );
	}
	else { 
		v = zlava( pole );	
		if( v != -1 ) 
			hladaj( pole, 0, v ); 
		else {
			printf("Nenaslo v do bludiska!\n");
			return;
		}
	}

}



int main (int argc, char *argv[])
{
	char z;
	char pole[MAX_SIZE][MAX_SIZE]; 
	int r = 0, st = 0;
	
	while( read(STDIN_FILENO, &z, 1) > 0) { 
		if( z == '-' ) {	
			if( riesenie == 0 ) {
				d = r;		
				najdi( pole );
				if( riesenie == 0 ) {
					printf("Riesenie tohto bludiska nebolo najdene!\n");
					riesenie = 1;			
				}
				printf("----\n");
				r = 0;	
				st = 0;	
				continue;			
			}
			else continue;
		}
		if( riesenie == 1 ) {	
			riesenie = 0;
			continue;
		}
		
		if( z == '\n' ) {
			if( st == 0 )
				continue;
			r = r + 1;		
			if( r >= MAX_SIZE ) {
				printf("Prekrocena maximalna veľkosť bludiska\n");
				return 0;
			}
			s = st;		
			st = 0;		
			continue;
		}	

		if( st >= MAX_SIZE ) {
			printf("Prekrocena maximalna veľkost bludiska\n");
			return 0;
		}

		pole[r][st] = z;	
		st = st + 1;	
		continue;
	}
	d = r;
	najdi( pole );	
	if( riesenie == 0 ) 
		printf("Riesenie tohto bludiska nebolo najdene!\n");
	return 0;
}


